{
    "name": "beastbytes/pdf",
    "description": "PDF Generator framework.",
    "keywords": [
        "PDF"
    ],
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Chris Yates",
            "email": "chris.l.yates@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "httpsoft/http-message": "^1.0",
        "yiisoft/event-dispatcher": "^1.0",
        "yiisoft/response-download": "^1.0",
        "yiisoft/view": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "roave/infection-static-analysis-plugin": "^1.0",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^5.0",
        "yiisoft/test-support": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "BeastBytes\\PDF\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeastBytes\\PDF\\Tests\\": "tests"
        }
    },
    "scripts": {
        "infection": "roave-infection-static-analysis-plugin --log-verbosity=all --debug",
        "psalm": "psalm",
        "robo": "robo",
        "test": "phpunit --testdox"
    }
}
